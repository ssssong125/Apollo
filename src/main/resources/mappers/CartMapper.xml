	<!-- <select> 태그를 이용하여 select 쿼리임을 나타냄. 앞서 mapper에서 말했던 메소드의 이름은 select 쿼리의 id값과 같아야함. -->
	<!-- 장바구니에 품목추가 -->
	<insert id="addProductToCart" parameterType="hashmap">
		INSERT INTO TBL_CART
		VALUES
			(
				SEQ_CART_NO.NEXTVAL,
				#{ productNo },
				#{ userId },
				#{ productCount },
				SYSDATE
			)
	</insert>
	<!--userId를 사용해 카트 정보를 조회-->
	<select id="getCartList" parameterType="hashmap" resultMap="cartResultMap">
		SELECT
			A.CART_NO,
			A.USER_ID,
			A.PRODUCT_COUNT,
			A.REG_DATE,
			B.*
		FROM TBL_CART A
		JOIN TBL_PRODUCT B ON A.PRODUCT_NO = B.PRODUCT_NO
		WHERE 1 = 1
		AND A.USER_ID = #{userId}
	</select>
	<!--주문 수량 수정-->
	<update id="updateProductCount" parameterType="hashmap">
		UPDATE TBL_CART A
		SET A.PRODUCT_COUNT = #{count}
		WHERE A.CART_NO = #{cartNo}
	</update>
	<!--장바구니에서 품목 삭제-->
	<delete id="deleteProductInCart" parameterType="Integer">
		DELETE FROM TBL_CART A
		WHERE A.CART_NO = #{ cartNo }
	</delete>
	<!--userId 통해 해당 유저의 상세 정보를 조회-->
	<select id="getUserDetail" parameterType="String" resultMap="userResultMap">
		SELECT
			A.USER_ID,
			A.USER_PWD,
			A.USER_NAME,
			A.USER_TEL,
			A.ADDRESS,
			A.USER_EMAIL,
			A.USER_ROLE,
			A.USER_ACTIVE,
			A.USER_ENTDATE,
			A.USER_POINT
		FROM TBL_USER A
		WHERE A.USER_ID = #{userId}
		  AND A.USER_ACTIVE = 'Y'
	</select>

