	<select id="getPaymentDetail" parameterType="hashmap" resultMap="paymentResultMap">
		SELECT
			A.PAYMENT_NO,
			A.USER_ID,
			A.USED_POINT,
			A.PAYMENT_AMOUNT,
			A.PAYMENT_METHOD,
			A.RECEIVER_NAME,
			A.RECEIVER_TEL,
			A.ADDRESS,
			A.PAYMENT_DATE,
			A.SHIPPING_STATUS
		FROM TBL_PAYMENT A
	 	JOIN TBL_USER B ON A.USER_ID = B.USER_ID
		WHERE B.USER_ID = #{userId}
	</select>
